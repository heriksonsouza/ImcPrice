<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.price.imc.herikson.imcprice.ListaAlunos">

    <ListView
        android:id="@+id/listCarros"
        android:layout_width="368dp"
        android:layout_height="388dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btFechar"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btFechar"
        android:layout_width="36dp"
        android:layout_height="37dp"

        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btRecuperar"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btChamarFormulario"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="chamarFormulario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listCarros"
        app:srcCompat="@android:drawable/ic_input_add" />/

</android.support.constraint.ConstraintLayout>
